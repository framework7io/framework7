# This file is for unifying the coding style of different editors and IDEs.
# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.json]
indent_size = 2

[*.md]
indent_size = 2

[*.html]
indent_size = 2
trim_trailing_whitespace = false

[*.jade]
indent_size = 2
trim_trailing_whitespace = false
